{% extends '@App/Article/base.html.twig' %}

{% block body %}

    <a class="btn btn-success" href="{{ path('article_new') }}">Create</a>
    {% for article in articles.iterator %}
        <div style="border:1px solid black;margin:5px">
            <a href="{{ path('article_view', {'url': article.url}) }}">
                {{ article.name }}
            </a>
            ({{ article.publishDate.format('Y.m.d H:i:s') }})
            <a style="float:right" href="{{ path('article_edit', {'id': article.id}) }}">
                edit
            </a>
        </div>
    {% endfor %}
    {% for i in range(1, articles.nbPages) %}
        <a href="{{ path('article_index', {'page': i}) }}">{{ i }}</a>
    {% endfor %}
    Total: {{ articles.nbResults }}

{% endblock %}